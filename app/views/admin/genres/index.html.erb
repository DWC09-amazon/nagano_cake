<div class="container my-5">
  
  <h4 class="mb-4">
    <span class="px-3 py-1" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">ジャンル一覧・追加</span>
  </h4>

  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <div class="row mb-5 align-items-center">
      <div class="col-md-2 text-md-right">
        <%= f.label :name, "ジャンル名" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名' %>
      </div>
      <div class="col-md-2">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
  
  <% if @genre.errors.any? %>
    <div id="error_explanation" class="mb-4">
      <h3 class="text-danger"><%= @genre.errors.count %>件のエラーがあります。</h3>
      <ul class="text-danger">
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th style="width: 70%;">ジャンル</th>
            <th style="width: 30%;"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>