<div class="container mt-5">
  <h4 class="mb-3">
    <span class="px-4" style="background-color: #e8e8e8;">管理者ログイン</span>
  </h4>

  <%= render 'layouts/error_messages', resource: @admin %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row justify-content-center mt-3">
      <div class="col-md-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-md-5">
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-md-3">
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="col-md-5">
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group row justify-content-center mt-3">
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン情報を保存する" %>
        </div>
      </div>
    <% end %>

    <div class="form-group row justify-content-center">
      <%= f.submit "ログイン", class: "btn btn-primary px-5" %>
    </div>
  <% end %>
</div>
