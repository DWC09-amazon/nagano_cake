<div class="container mt-5">
  <h4 class="mb-3">
    <span class="px-4" style="background-color: #e8e8e8;">会員一覧</span>
  </h4>

  <div class="d-flex justify-content-center">
    <div class ="table-responsive" style="max-width: 80%;">
      <table class="table table-hover align-middle border-bottom">
        <thead class="table-active">
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer), class: "fw-semibold" %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_active? %>
                  <span class="text-success fw-semibold">有効</span>
                <% else %>
                  <span class="text-secondary fw-semibold">退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @customers %>
  </div>
</div>
