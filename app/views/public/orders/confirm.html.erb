<h2>注文情報確認</h2>

<div class="row">
  <div class="col-md-8">
    <h3>注文内容</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= (cart_item.item.price * 1.08).round.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <h3>支払方法</h3>
    <p>
      <%= @order.payment_method_i18n %>
    </p>

    <h3>お届け先</h3>
    <p>
      〒<%= @order.postal_code %><br>
      <%= @order.address %><br>
      <%= @order.name %> 様
    </p>
  </div>
  
  <div class="col-md-4">
    <h3>請求情報</h3>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>送料</th>
          <td><%= @shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= @total_item_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-info">請求金額</th>
          <td class="table-info">
            **<%= @total_payment.to_s(:delimited) %>**
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="text-center">
  <%= form_with url: public_orders_path, method: :post, local: true do |f| %>

    <%= f.hidden_field :payment_method, value: @order.payment_method %>
    <%= f.hidden_field :postal_code, value: @order.postal_code %>
    <%= f.hidden_field :address, value: @order.address %>
    <%= f.hidden_field :name, value: @order.name %>

    <%= f.hidden_field :shipping_cost, value: @shipping_cost %>
    <%= f.hidden_field :total_payment, value: @total_payment %>
    
    <%= f.submit "注文を確定する", class: "btn btn-success btn-lg" %>
  <% end %>
</div>