<h4>注文履歴詳細</h4>

<div class="order-detail-container">

  <div class="info-group" style="display: flex; gap: 30px;">
    
    <section class="order-info" style="flex: 1;">
      <h2>注文情報</h2>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>様
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n || @order.payment_method %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n || @order.status %></td>
          </tr>
        </tbody>
      </table>
    </section>

    <section class="billing-info" style="flex: 1;">
      <h2>請求情報</h2>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= number_to_currency (@order.total_payment - @order.shipping_cost) %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= number_to_currency @order.shipping_cost %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= number_to_currency @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </section>
  </div>

  <hr>

  <section class="order-items">
    <h2>注文内容</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価 (税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |detail| %>
          <tr>
            <td><%= detail.item.name %></td>
            <td><%= number_to_currency detail.price %></td>
            <td><%= detail.amount %></td>
            <td><%= number_to_currency detail.subtotal %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>

</div>