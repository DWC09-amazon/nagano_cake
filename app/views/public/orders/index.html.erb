<div class="container my-5">
  <h4 class="mb-4">
    <span class="px-3 py-1" style="background-color: #e8e8e8;">注文履歴一覧</span>
  </h4>

  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th style="width: 15%;">注文日</th>
        <th style="width: 30%;">配送先</th>
        <th style="width: 25%;">注文商品</th>
        <th style="width: 10%;">支払金額</th>
        <th style="width: 10%;">ステータス</th>
        <th style="width: 10%;">注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
          
          <td>
            〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          
          <td>
            <% if order.order_details.any? %>
              <%= order.order_details.first.item.name %>
            <% else %>
              (商品なし)
            <% end %>
          </td>

          <td><%= order.total_payment.to_s(:delimited) %> 円</td>
          
          <td><%= order.status_i18n %></td>
          
          <td>
            <%= link_to "表示する", order_path(order), class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>